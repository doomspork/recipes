---
import { getCollection } from 'astro:content';
import '../styles/recipe.css';

const recipes = await getCollection('recipes');
const sorted = recipes.sort((a, b) => a.data.title.localeCompare(b.data.title));
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Recipes</title>
  <style>
    .recipe-index {
      max-width: 800px;
      margin: 0 auto;
    }
    .recipe-index h1 {
      font-size: 2.25rem;
      font-weight: 700;
      color: #1a1a1a;
      margin-bottom: 1.5rem;
    }
    .recipe-list {
      list-style: none;
    }
    .recipe-list li {
      border-bottom: 1px solid #eee;
    }
    .recipe-list a {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem 0.5rem;
      text-decoration: none;
      color: #333;
      transition: background-color 0.15s;
    }
    .recipe-list a:hover {
      background-color: #fafafa;
    }
    .recipe-list .recipe-name {
      font-weight: 600;
      font-size: 1.1rem;
    }
  </style>
</head>
<body>
  <div class="recipe-index">
    <h1>Recipes</h1>
    <ul class="recipe-list">
      {sorted.map((recipe) => (
        <li>
          <a href={`${import.meta.env.BASE_URL}/${recipe.id}/`}>
            <span class="recipe-name">{recipe.data.title}</span>
            <span class="cooking-method">{recipe.data.method}</span>
          </a>
        </li>
      ))}
    </ul>
  </div>
</body>
</html>
